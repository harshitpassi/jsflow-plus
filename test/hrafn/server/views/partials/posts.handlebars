{{#each posts}}
  <section class="post">
    <header class="post-header">
      <img class="post-avatar" height="48" width="48" src="img/common/avatar2.png">

      <h2 class="post-title">{{title}}</h2>

      <p class="post-meta">
          By <a class="post-author" href="#">{{author}}</a> 
      </p>
    </header>

    <div class="post-description">
      {{{content}}}
    </div>
  </section>

{{/each}}
